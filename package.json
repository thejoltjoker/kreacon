{
	"name": "kreacon",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"db:start": "docker compose up",
		"db:reset": "npm run db:migrate && npm run db:seed",
		"db:push": "drizzle-kit push",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "cross-env DB_MIGRATING=true tsx src/lib/server/db/migrate.ts",
		"db:seed": "cross-env DB_SEEDING=true tsx src/lib/server/db/seed.ts",
		"db:studio": "drizzle-kit studio",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run",
		"lint": "eslint . && prettier --check .",
		"format": "prettier --write .",
		"swa:build": "swa build",
		"swa:start": "swa start",
		"prepare": "husky",
		"commitlint": "commitlint --edit"
	},
	"devDependencies": {
		"@azure/static-web-apps-cli": "^2.0.1",
		"@commitlint/cli": "^19.5.0",
		"@commitlint/config-conventional": "^19.5.0",
		"@melt-ui/pp": "^0.3.2",
		"@melt-ui/svelte": "^0.86.0",
		"@sveltejs/adapter-auto": "^3.3.1",
		"@sveltejs/kit": "^2.8.1",
		"@sveltejs/vite-plugin-svelte": "^4.0.1",
		"@tailwindcss/forms": "^0.5.9",
		"@types/bcrypt": "^5.0.2",
		"@types/bcryptjs": "^2.4.6",
		"@types/eslint": "^9.6.1",
		"@types/jsonwebtoken": "^9.0.7",
		"autoprefixer": "^10.4.20",
		"bits-ui": "^1.0.0-next.58",
		"cross-env": "^7.0.3",
		"dotenv-expand": "^12.0.0",
		"drizzle-kit": "^0.28.1",
		"eslint": "^9.15.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.46.0",
		"globals": "^15.12.0",
		"husky": "^9.1.6",
		"postcss-nesting": "^13.0.1",
		"prettier": "^3.3.3",
		"prettier-plugin-svelte": "^3.2.8",
		"prettier-plugin-tailwindcss": "^0.6.8",
		"svelte": "^5.2.2",
		"svelte-adapter-azure-swa": "^0.20.1",
		"svelte-check": "^4.0.9",
		"sveltekit-superforms": "^2.20.1",
		"tailwind-merge": "^2.5.4",
		"tailwindcss": "^3.4.15",
		"tsx": "^4.19.2",
		"typescript": "^5.6.3",
		"typescript-eslint": "^8.14.0",
		"vite": "^5.4.11",
		"vitest": "^2.1.5",
		"zod": "^3.23.8"
	},
	"type": "module",
	"dependencies": {
		"@azure/communication-email": "^1.0.0",
		"@microsoft/applicationinsights-web": "^3.3.4",
		"bcryptjs": "^2.4.3",
		"drizzle-orm": "^0.36.3",
		"drizzle-zod": "^0.5.1",
		"jsonwebtoken": "^9.0.2",
		"lucide-svelte": "^0.460.1",
		"postgres": "^3.4.5",
		"svelte-i18n": "^4.0.1"
	},
	"engines": {
		"node": "20"
	},
	"optionalDependencies": {
		"@rollup/rollup-linux-x64-gnu": "^4.27.2"
	}
}
